<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/city"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp" >
    
    <TextView
        android:text="@string/app_name"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="30dp"/>
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal">
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="@string/game_mode_title"/>
    
		<Spinner
	        android:id="@+id/game_mode"
			android:textSize="13sp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/game_modes"
	        android:spinnerMode="dropdown" />
	</LinearLayout>
	
    <LinearLayout
    	android:paddingTop="20dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal">
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="@string/game_difficulty_title"/>
    
		<Spinner
	        android:id="@+id/game_difficulty"
	        android:textSize="13sp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/game_difficulties"
	        android:spinnerMode="dropdown" />
	</LinearLayout>
	
	<LinearLayout
	    android:paddingTop="20dp"
    	android:paddingBottom="20dp"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal">
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="80dp"
			android:textStyle="bold"
            android:textSize="13sp"
            android:text="@string/game_radius_title"/>
    
		<Spinner
	        android:id="@+id/game_radius"
	        android:textSize="13sp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/game_radiuses"
	        android:spinnerMode="dropdown" />
		
	</LinearLayout>
		
    <Button 
        android:onClick="startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_button" />
    
</LinearLayout>
